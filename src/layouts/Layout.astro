---
import '../styles/global.css';
import Navigation from '../components/navigation/Header.astro';
import Footer from '../components/navigation/Footer.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@600;700&family=Heebo:wght@400;500&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-white min-h-screen">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>