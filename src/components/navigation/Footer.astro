---
import { Image } from "astro:assets";
import logoImage from "../../assets/logo/smart-performance-logo.png";
import SocialIcons from "../contact/SocialIcons.astro";
import ContactInfo from "../contact/ContactInfo.astro";

interface Props {
  phone?: string;
  phoneExt?: string;
  email?: string;
  address?: string;
}

const {
  phone = "705.835.2790",
  phoneExt = "x1288",
  email = "smartadventures@horseshoeresort.com",
  address = "3303 3 Line N Barrie, ON, Canada L0L 2L0",
} = Astro.props;
---

<footer class="bg-dark py-16 mt-auto">
  <div class="container xl:max-w-[1280px] mx-auto px-4">
    {/* Main Content - 5 Column Grid */}
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-x-8 gap-y-12 pb-12"
    >
      {/* Column 1-2 - Logo & Info (Spans 2 columns) */}
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-6">
          <Image
            src={logoImage}
            alt="SMART Performance Centre"
            class="h-12 w-auto"
            width={200}
            height={48}
          />
        </a>
        <div class="mb-2 md:mb-24">
          <h5 class="text-blue text-2xl">
            BMW GS OFF ROAD RIDER TRAINING CENTRE
          </h5>
          <p class="text-light text-base">
            {address}
          </p>
        </div>
        <div class="space-y-2">
          <a href={`tel:${phone.replace(/\D/g, "")}`} class="nav-link block">
            {phone}
            {phoneExt}
          </a>
          <a href={`mailto:${email}`} class="nav-link block underline">
            {email}
          </a>
        </div>
      </div>

      {/* Column 3 - First Nav Set */}
      <div class="space-y-4">
        <a href="/about" class="nav-link block">ABOUT</a>
        <a href="/off-road-training" class="nav-link block">OFF-ROAD TRAINING</a
        >
        <a href="/schedules" class="nav-link block">SCHEDULES & PRICING</a>
        <a href="/photos" class="nav-link block">PHOTOS</a>
        <a href="/videos" class="nav-link block">VIDEOS</a>
      </div>

      {/* Column 4 - Second Nav Set */}
      <div class="space-y-4">
        <a href="/podcasts" class="nav-link block">PODCASTS</a>
        <a href="/faqs" class="nav-link block">FAQS</a>
        <a href="/contact" class="nav-link block">CONTACT US</a>
        <a href="/contact" class="nav-link block">FOR SALE</a>
        <a href="/adventures" class="nav-link block">SMART ADVENTURES</a>
      </div>

      {/* Column 5 - Back to Top */}
      <div class="flex lg:justify-end">
        <button
        id="back-to-top"
        class="inline-flex items-center justify-center w-12 h-12 bg-[#F01D1D] hover:bg-[#D41919] transition-colors duration-300 rounded-sm group"
        aria-label="Back to top"
      >
        <i class="ri-arrow-up-s-line text-2xl text-light transform transition-transform duration-300 group-hover:-translate-y-1"></i>
      </button>
      </div>
    </div>

    {/* Bottom Bar with Copyright and Social Icons */}
    <div class="border-t border-light/10 pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-light/60 text-sm order-2 sm:order-1">
          Â© {new Date().getFullYear()} BMW GS Off Road Rider Training Centre. All
          rights reserved.
        </p>

        <SocialIcons className="order-1 sm:order-2" />
      </div>
    </div>
  </div>
</footer>

<script>
  const backToTopButton = document.getElementById("back-to-top");

  if (backToTopButton) {
    backToTopButton.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });

    // Optional: Show/hide button based on scroll position
    window.addEventListener("scroll", () => {
      if (window.scrollY > 500) {
        backToTopButton.classList.add("opacity-100");
        backToTopButton.classList.remove("opacity-0");
      } else {
        backToTopButton.classList.add("opacity-0");
        backToTopButton.classList.remove("opacity-100");
      }
    });
  }
</script>
