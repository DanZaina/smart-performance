---
interface Props {
  title: string;
  price: string;
  details: string[];
}

const {
  title,
  price,
  details = [

  ],
} = Astro.props;
---

<div class="max-w-2xl mx-auto bg-light rounded-lg overflow-hidden border border-dark/30 shadow-md">
  {/* Header Section */}
  <div class="text-center p-8 space-y-2">
    <h3 class="text-dark">
      {title}
    </h3>
    <p class="text-blue text-3xl md:text-2xl font-barlow uppercase">
      {price}
    </p>
  </div>

  {/* Details Button */}
  <div class="text-center pb-8">
    <a href="#" class="inline-block border-2 border-dark px-8 py-3 font-barlow text-lg tracking-wide text-dark hover:bg-dark hover:text-light transition-colors duration-300">
      COURSE DETAILS
    </a>
  </div>

  {/* Details List */}
  <div class="divide-y divide-dark/10">
    {details.map(detail => (
      <div class="p-6 text-center">
        <p class="text-lg font-heebo text-dark">
          {detail}
        </p>
      </div>
    ))}
  </div>
</div>